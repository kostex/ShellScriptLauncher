<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">2010</defaultcontrol>
	<!-- animation -->
    <include name="OpenClose">
        <animation effect="fade" time="250">WindowOpen</animation>
        <animation effect="fade" time="250">WindowClose</animation>
    </include>
  	<!-- animation -->
	<coordinates>
		<left>310</left>
		<top>140</top>
		<origin x="310" y="140">Window.IsActive(Home)</origin>
	</coordinates>
	<controls>
		<control type="image">
			<left>-1920</left>
			<top>-1080</top>
			<width>5760</width>
			<height>3240</height>
			<animation effect="fade" start="0" end="100" time="300">WindowOpen</animation>
			<animation effect="fade" start="100" end="0" time="200">WindowClose</animation>
			<texture colordiffuse="88888888">colors/black.png</texture>
		</control>

		<control type="button" id="2999">
			<left>-1920</left>
			<top>-1080</top>
			<width>5760</width>
			<height>3240</height>
			<texturefocus />
			<texturenofocus />
			<onclick>Action(back)</onclick>
			<onup>2010</onup>
			<ondown>2010</ondown>
			<onleft>2010</onleft>
			<onright>2010</onright>
		</control>

		
		<!-- background -->
		<control type="image">
			<left>-15</left>
			<top>-15</top>
			<width>1230</width>
			<height>830</height>
		
			<texture flipx="true">dialogs/SettingsBG.png</texture>
			<colordiffuse>$VAR[DialogBGColor]</colordiffuse>

		</control>
		
		<!-- control background -->
		<control type="image">
			<left>50</left>
			<top>120</top>
			<width>1100</width>
			<height>630</height>
			<texture border="0,30,0,0">OSD/FS_OSDBackground.png</texture>
		</control>
		

		<control type="image">
			<left>640</left>
			<top>20</top>
			<width>510</width>
			<height>65</height>
			<texture border="0,30,0,0">OSD/FS_OSDBackground.png</texture>
		</control>
		
		<control type="radiobutton" id="2010">
			<type>radiobutton</type>
			<left>30</left>
			<top>5</top>
			<width>400</width>
			<height>90</height>
			<align>left</align>
			<aligny>center</aligny>
			<pulseonselect>false</pulseonselect>
			<onfocus></onfocus>
			<onunfocus></onunfocus>
			<onup></onup>
			<ondown>2000</ondown>
			<onleft></onleft>
			<onright></onright>
			<label>None</label>
			<textoffsetx>30</textoffsetx>
			<textwidth>300</textwidth>
			<font>font14</font>
		</control>
		
		<!-- label -->
		<control type="label" id="2021">
			<left>640</left>
			<top>20</top>
			<width>430</width>
			<height>60</height>
			<aligny>center</aligny>
			<align>right</align>
			<label>Discovering</label>
			
			<font>font13</font>
			<textcolor>white</textcolor>
			<selectedcolor>$VAR[ThemeLabelColor]</selectedcolor>
			<disabledcolor>grey3</disabledcolor>
		</control>		

		<control type="list" id="2000">
			<description>My first list container</description>
			<left>50</left>
			<top>120</top>
			<width>1100</width>
			<height>630</height>
			<onleft></onleft>
			<onright></onright>
			<onup>2010</onup>
			
			<visible>true</visible>
			<viewtype>biglist</viewtype>
			<orientation>vertical</orientation>
			<autoscroll>false</autoscroll>
			<scrolltime tween="sine" easing="out">200</scrolltime>
			
			<itemlayout width="1100" height="80">
				<control type="image">
					<width>1000</width>
					<height>80</height>
					<texture border="3">list/ListNF.png</texture>
				</control>
				<control type="image">
					<left>3</left>
					<top>3</top>
					<width>64</width>
					<height>64</height>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>
				<!-- no focus label -->
				<control type="label">
					<left>100</left>
					<top>3</top>
					<width>950</width>
					<height>80</height>
					
					<font>font14</font>
					<textcolor>grey</textcolor>
					<selectedcolor>selected</selectedcolor>
					
					<aligny>center</aligny>
					<align>left</align>
					<label>$INFO[ListItem.Label]</label>
					<shadowcolor>shadow</shadowcolor>
				</control>

			</itemlayout>
			<focusedlayout width="1100" height="80">
				<!-- focus background -->
				<control type="image">
					<width>1000</width>
					<height>80</height>
					<texture border="3">list/ListNF.png</texture>
				</control>

				<control type="image">
					<width>1000</width>
					<height>80</height>
					<left>80</left>
					<top>0</top>
					<visible>Control.HasFocus(2000)</visible>
					<texture border="4" colordiffuse="$VAR[HighlightColor]">img/WhiteRoundedST2.png</texture>
				</control>
				
				<control type="image">
					<left>3</left>
					<top>3</top>
					<width>64</width>
					<height>64</height>
					<texture>$INFO[ListItem.Icon]</texture>
				</control>
				
				<!-- focus label -->
				<control type="label">
					<left>100</left>
					<top>3</top>
					<width>950</width>
					<height>80</height>
					
					<font>font14</font>
					<textcolor>white</textcolor>
					<selectedcolor>selected</selectedcolor>
					
					<aligny>center</aligny>
					<align>left</align>
					
					<visible>Control.HasFocus(2000)</visible>
					<label>$INFO[ListItem.Label]</label>
					<shadowcolor>shadow</shadowcolor>
					
				</control>
				<!-- no focus label -->
				<control type="label">
					<left>100</left>
					<top>3</top>
					<width>950</width>
					<height>80</height>
					
					<font>font14</font>
					<textcolor>grey</textcolor>
					<selectedcolor>selected</selectedcolor>
					
					<aligny>center</aligny>
					<align>left</align>
					
					<visible>!Control.HasFocus(2000)</visible>
					<label>$INFO[ListItem.Label]</label>
					<shadowcolor>shadow</shadowcolor>
				</control>

			</focusedlayout>

		</control>


	</controls>
</window>
